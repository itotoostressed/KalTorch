<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/activity_menu">

    <activity
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.MenuActivity"
        android:label="@string/title_home"
        tools:layout="@layout/activity_menu" />

    <activity
        android:id="@+id/navigation_calorie"
        android:name="com.example.myapplication.CalorieActivity"
        android:label="@string/title_calorie"
        tools:layout="@layout/activity_calorie" />

    <activity
        android:id="@+id/navigation_calculator"
        android:name="com.example.myapplication.MainActivity"
        android:label="@string/title_calculator"
        tools:layout="@layout/activity_main" />

    <activity
        android:id="@+id/navigation_profile"
        android:name="com.example.myapplication.LoginActivity"
        android:label="@string/title_profile"
        tools:layout="@layout/activity_login" />
</navigation>